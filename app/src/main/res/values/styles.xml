<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BtnBlack">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BtnOrange" parent="BtnBlack">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="BtnWhite" parent="BtnBlack">
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@animator/scaling_anim</item>
        <item name="android:background">@drawable/equals_btn_background</item>
    </style>
</resources>